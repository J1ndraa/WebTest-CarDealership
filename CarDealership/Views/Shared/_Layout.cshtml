<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PinyaCar - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="shortcut icon" type="image/webp" href="~/favicon.webp" />
</head>
<body>
    <header>

        <!-- Navigation menu -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-prim box-shadow p-2 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="/favicon.webp"/></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                
                <div class="navbar-collapse collapse justify-content-end" id="mainNav">
                    <ul class="navbar-nav">
                        <li class="nav-item border-1 border-primary">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Úvod</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Nabidky" asp-action="Index">Nabídka</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Kontakt" asp-action="Index">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-prim text-light box-shadow py-2">
        <div class="container bg-prim">
            <div class="row">
                <div class="col pt-2">
                    <!-- Footer navigation -->
                    <ul class="footer-nav">
                        <li><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Index">Úvod</a></li>
						<li><a class="footer-link" asp-area="" asp-controller="Nabidky" asp-action="Index">Nabídka</a></li>
						<li><a class="footer-link" asp-area="" asp-controller="Kontakt" asp-action="Index">Kontakt</a></li>
                    </ul>
                    Copyright © 2025 PinyaCar. All rights reserved.
                </div>
                <div class="col text-end display-6 pt-1">
                    <a class="socials pe-2" href="https://www.facebook.com/"><i class="fa-brands fa-square-facebook"></i></a>
                    <a class="socials" href="https://www.instagram.com/"><i class="fa-brands fa-instagram"></i></a>
                </div>

            </div>
        </div>
    </footer>


    <!-- ChatBot box -->
    <div class="chat-box shadow">
        <i class="fa-solid fa-comments me-2"></i> Zeptejte se
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
